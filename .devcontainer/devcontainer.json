{
    "name": "KCL Plugin Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/java:1": {
            "version": "11",
            "installGradle": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack",
                "mathiasfrohlich.Kotlin"
            ]
        }
    },
    "postCreateCommand": "wget -O /usr/local/bin/idea-flex.skeleton https://raw.githubusercontent.com/JetBrains/Grammar-Kit/master/resources/idea-flex.skeleton && wget -O /usr/local/bin/jflex-1.7.0-2.jar https://raw.githubusercontent.com/JetBrains/Grammar-Kit/master/lib/jflex-1.7.0-2.jar",
    "remoteUser": "vscode"
}